@model Authorization.Api.Models.LoginModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Login";
}

@section css {
    <style>
        body {
            background: #3366CC;
        }

        .login-container {
            max-width: 400px;
            text-align: center;
            margin-left: auto;
            margin-right: auto;

            padding-top: 30px;
        }

        form {
            padding-top: 15px;
        }

        .forgot-password-link {
            text-align: left;
            padding: 5px 0;
        }

        a {
            color: #fff;
        }

        .sign-up-btn {
            padding-top: 30px;
        }

        .footer {
            font-size: .8em;
            position: fixed;
            bottom: 0;
            left: 0;
            padding: 5px 10px;
            width: 100%;
            color: #fff;
        }
    </style>
}

@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('.login-container').height($(window).height());
        });
    </script>
}

<div class="login-container">
        
        @using (Html.BeginForm("Login", "OAuth", FormMethod.Post, new {  }))
        {
            @Html.ValidationSummary()
            @Html.AntiForgeryToken()
            @Html.Hidden("ReturnUrl", Request.Params["ReturnUrl"])

            <div class="form-group">
                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class="form-control" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class="form-control" })
            </div>
        
            <button type="submit" class="btn btn-default btn-block">Login</button>
        }
        <div class="forgot-password-link">
            <a href="@ViewBag.ForgotPasswordUrl">Forgot your password?</a>
        </div>

        <div class="sign-up-btn">
        <a class="btn btn-default" href="@ViewBag.CreateUrl" role="button">New? Sign up</a>
    </div>
    
    
</div>